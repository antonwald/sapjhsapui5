<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="sap.training.anton.controller.FlightList">
	<Table items="{/data}" noDataText="Drop column list items here and columns in the area above" id="flightTable">
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{path: 'carrId', formatter: '.formatter.carrName'}"/>
					<Text text="{connId}"/>
					<Text text="{parts: [{path: 'price'},{path: 'currency'}], 
					             type: 'sap.ui.model.type.Currency',
					             formatOptions: {
					                 showMeasure: true,
					                 currencyCode: false
					             }}"/>
					<Text text="{= ${seatsMax} - ${seatsOcc} }"></Text>
				</cells>
			</ColumnListItem>
		</items>
		<columns>
			<Column id="airlineColumn">
				<header>
					<Label text="{i18n>airline}" id="airlineColumnLabel"/>
				</header>
			</Column>
			<Column id="flightColumn">
				<header>
					<Label text="Flight Number" id="flightColumnLable"/>
				</header>
			</Column>
			<Column id="priceColumn">
				<header>
					<Label text="Price" id="priceColumnLabel"/>
				</header>
			</Column>
			<Column id="availColumn">
				<header>
					<Label text="Availability" id="availColumnLabel"/>
				</header>
			</Column>
		</columns>
	</Table>
</mvc:View>