<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sap.training.anton.controller.Detail"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
	<Page title="Detail Page" showNavButton="true" navButtonPress="navigateBack">
		<content>
				<f:SimpleForm editable="true" layout="ResponsiveGridLayout" id="idForm" binding="{/data/0}" emptySpanL="5">
	    <f:content>
	        <core:Title text="Flight Details" id="idFormTitle"/>
	        <Label text="Flug" id="__label0"/>
	        <Text text="{path: 'carrId', formatter: '.formatter.carrName'}" width="100%" id="idCarrIdInput"/>
	        <Text text="{connId}" width="100%" id="idConnIdInput"/>
	        <Label text="Price" id="__label1"/>
	        <Input value="{parts: [{path: 'price'},{path: 'currency'}],type: 'sap.ui.model.type.Currency',formatOptions: {showMeasure: true,
					currencyCode: true}}" width="100%" id="idPriceInput"/>
			<Label text="Maximum Seats"></Label>
			<Input value="{path: 'seatsMax', type: 'sap.ui.model.type.Integer'}">
				<layoutData>
					<l:GridData span="L10 M10 S12"/>
				</layoutData>
			</Input>
			<Button text="Save">
				<layoutData>
					<l:GridData span="L5 M8 S12" indent="L2 M2"/>
				</layoutData>
			</Button>
	     </f:content>
	</f:SimpleForm>
			
		</content>
	</Page>
</mvc:View>